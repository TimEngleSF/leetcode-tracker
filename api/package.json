  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist && cp -R src/views dist/ && cp -R src/public dist/",
    "test": "NODE_ENV=test mocha -r ts-node/register src/__tests__/**/*.test.ts",
    "unit-test": "NODE_ENV=test mocha -r ts-node/register src/__tests__/unit/**/*.test.ts",
    "int-test": "NODE_ENV=test mocha -r ts-node/register src/__tests__/integration/**/*.test.ts",
    "test:coverage": "nyc npm run test",
    "unit-test:coverage": "nyc npm run unit-test",
    "int-test:coverage": "nyc --reporter=html --reporter=text npm run int-test",
    "dev": "NODE_ENV=dev nodemon dist/app.js",
    "production": "NODE_ENV=production node dist/app.js"
  },
